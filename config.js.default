module.exports = {

	// API & Device keys for Control Panel remote control
	api_key: "",
	device_key: "",

	// auto-connect feature. enable it and Prey will try to connect to the first
	// open WiFi network available in the area
	auto_connect: true,
	max_auto_connect_attempts: 2,
	auto_connect_timeout: 5000,

	// additional endpoints for fetching instruction set
	alternate_check_urls: [ ],

	// in case Prey cannot find a missing: true value in the response schema,
	// it will compare the response status code to this one. if it matches, Prey
	// will assume the device is marked as missing and send a report.
	missing_status_code: 404,

	// destination(s) for sending reports
	// valid values: control_panel, http, smtp
	destinations: ["control_panel"],

	//////////////////////////////////////////////////////////////
	// SSL keys, for tunnels and On Demand
	//////////////////////////////////////////////////////////////

	certificate_file: "ssl.cert",
	private_key_file: "ssl.key",

	//////////////////////////////////////////////////////////////
	// http request options
	//////////////////////////////////////////////////////////////

	// this option prepends a random number as a subdomain to the check URL on http mode
	// makes it harder for other programs to block Prey so its a good idea to be on
	randomize_check_host: false,

	// whether to send your device's LAN and gateway IP address as headers when
	// checking its status. currently only for testing purposes, but maybe in the
	// future it may prove useful. :)
	extended_headers: true,

	// when offline actions are enabled, this is filename where Prey stores a backup
	// of the last response it received from the web server. you probably don't need
	// to change it.
	last_response_file: "last-response.xml",

	//////////////////////////////////////////////////////////////
	// additional options
	//////////////////////////////////////////////////////////////

	// help us in the debugging process by sending anonymous crash reports,
	// containing the exception message and a (hopefully small) backtrace
	send_crash_reports: true,

	//////////////////////////////////////////////////////////////
	// proxy options
	//////////////////////////////////////////////////////////////

	proxy: {

		enable: false,
		host: 'localhost',
		port: 3128,

	},

	//////////////////////////////////////////////////////////////
	// transports config, for reports, events and traces
	// values are overridden with the ones received remotely
	//////////////////////////////////////////////////////////////

	transports: {

		//////////////////////////////////////////////////////////////
		// HTTP transport settings
		//////////////////////////////////////////////////////////////

		http: {

			// encoding: 'utf8',
			// followRedirects: true,

			// http basic auth for generic http
			username: '',
			password: '',

		},

		//////////////////////////////////////////////////////////////
		// SMTP settings, for email posting
		//////////////////////////////////////////////////////////////

		smtp: {

			// mailbox to send the report
			recipient: "mailbox@domain.com",

			// you dont need to change this
			from: "Prey <no-reply@gmail.com>",
			subject: "[Prey] Status Report",

		},

		//////////////////////////////////////////////////////////////
		// SCP (Secure Copy) settings
		// we dont use user/pass but RSA keys
		//////////////////////////////////////////////////////////////

		scp: {

			options: "-oStrictHostKeyChecking=no",

			// remember you should have write access to the folder
			user: "username",
			host: "my.server.com",
			path: "~",

		},

		//////////////////////////////////////////////////////////////
		// SFTP settings
		//////////////////////////////////////////////////////////////

		sftp: {

			options: "-oStrictHostKeyChecking=no",

			// make sure you have write access!
			user: "username",
			host: "my.server.com",
			path: ".",

		},

		//////////////////////////////////////////////////////////////
		// Amazon S3 keys
		//////////////////////////////////////////////////////////////

		s3: {

			access_key_id: "",
			secret_access_key: "",
			bucket_name: "",

		}

	}

	//////////////////////////////////////////////////////////////
	// if you have any questions please visit preyproject.com
	//////////////////////////////////////////////////////////////

}
