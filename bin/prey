#!/bin/sh

dir="$(dirname $0)"
script="lib/agent/cli.js"

if [ "$1" = "config" ]; then
  script="lib/conf/cli.js"
elif [ "$1" = "test" ]; then
  script="node_modules/.bin/_mocha"
elif [ "$1" = "scripts" ]; then
  script="scripts/$2"
fi

if [ -x "$dir/node" ]; then
  exec "$dir/node" "$dir/../${script}" "$@"
else
  exec node "$dir/../${script}" "$@"
fi