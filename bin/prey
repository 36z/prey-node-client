#!/bin/sh

dir="$(dirname $0)"
# [ -z "$script" ] && echo "Usage: prey.sh [script] <args>" && exit 1

if [ "$1" = "config" ]; then
  script="lib/conf/cli.js"
  shift
elif [ "$1" = "test" ]; then
  script="node_modules/mocha/bin/mocha"
  shift
else
  script="lib/agent/cli.js"
fi

if [ -x "$dir/node" ]; then
  "$dir/node" "$dir/../${script}" "$@"
else
  node "$dir/../${script}" "$@"
fi
